/**
 * Implements hook_menu().
 */
function cdi2018_menu() {
    $items = array();
    $items['commitment-development-index-2018'] = array(
        'page callback' => 'cdi2018_index_page',
        'access callback' => TRUE,
        'type' => MENU_CALLBACK,
    );
    $items['cdi-2018/country/%'] = array(
        'page callback' => 'cdi2018_country_page',
        'page arguments' => array(2),
        'access callback' => TRUE,
        'type' => MENU_CALLBACK,
    );
  
    return $items;
}

/**
 * Implements hook_theme().
 */
function cdi2018_theme() {
  return array(
    'cdi2018_index' => array(
      'template' => 'cdi2018_index',
    ),
    'cdi2018_country' => array(
      'variables' => array('countries' => NULL, 'indicators' => NULL),
      'template' => 'cdi2018_country',
    ),
    'cdi2018_footer' => array(
      'template' => 'cdi2018_footer',
    ),
  );
}


/* function below is being called on and altering ALL pages; execute only when requested path matches for CDI pages*/

  function cdi2018_html_head_alter(&$head_elements) {

