  $country = cdi2018_get_country_node($country_code);
  drupal_add_css('//unpkg.com/mobius1-selectr@2.4.0/dist/selectr.min.css', 'external');
  drupal_add_css(drupal_get_path('module', 'cdi2018') . '/css/cdi2018.unmin.css'); /* TODO */
